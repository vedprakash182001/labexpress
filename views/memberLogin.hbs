<!doctype html>
<html lang="en">
  {{>head}}
  <body>
    {{>navbar}}

    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <p class="text-center mt-3" style="font-size: 30px; font-weight:500">Login</p>
                <form action="/memberLogin" method="post">
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="email">
                    </div>
                    <div class="mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Password">
                    </div>
                    <a href="/forgotPassword" class="">Click here if you forgot your Password</a>
                    <br>
                    {{#if error}}
                        <p style="color: red;" >Invalid Login detials</p>
                    {{/if}}
                    <button type="submit" class="btn btn-primary loginbtn mt-2">Login</button>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row mt-5">
            <div class="col-md-3">
                
            </div>
            <div class="col-md-6">
                <div class="login1 pt-2 ps-2">
                    <p class="ms-3">Has your membership expired? <b>Renewing is easy!</b> </p>
                </div>
                <div class="login2 pt-4">
                    <ul>
                        <li><p>Click "Forgot your Password" & enter your email address</p></li>
                        <li><p>Check your email & click the link under "Forgot your Password"</p></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="login3">
            
        </div>
    </div>
    
    <div class="container my-5">
      <hr>
    </div>
    {{>footer}}
    {{>script}}
  </body>
</html>